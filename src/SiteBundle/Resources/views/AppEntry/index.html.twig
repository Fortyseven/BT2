{% extends '::base.html.twig' %}

{% block body -%}
    <div id="AdminAppNewEntryBtn" class="button">
        <a href="{{ path('appentry_new') }}">Create a new entry</a>
    </div>
    <h1>Applications</h1>

    <div id="AdminAppList">
        {% for entity in entities %}
            <div class="entry_content">
                <a class="entry_name" href="{{ path('appentry_show', { 'id': entity.id }) }}">{{ entity.name }}</a> <span class="entry_shortname">({{ entity.shortName }})</span>

                <div class="entry_options">
                    <div><a href="{{ path('appentry_show', { 'id': entity.id }) }}">show</a></div>
                    <div><a href="{{ path('appentry_edit', { 'id': entity.id }) }}">edit</a></div>
                </div>

                <div class="clearfix"></div>
            </div>
        {% endfor %}

    </div>
{% endblock %}
